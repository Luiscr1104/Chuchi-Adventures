---
import { Instagram, Facebook, Mail, Phone, MapPin, ExternalLink } from "lucide-react";
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-950 text-white pt-24 pb-12 border-t border-white/5">
    <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-20">
            
            <!-- Brand & Mission -->
            <div class="lg:col-span-4 space-y-8">
                <a href="/" class="group flex items-center gap-4">
                    <img 
                      src="/logoBlack.svg" 
                      alt="BeyondArenal" 
                      class="h-12 w-auto invert brightness-0 underline-offset-8"
                    />
                </a>
                <p class="text-white/50 text-lg leading-relaxed font-light max-w-sm">
                    Preserving the authentic spirit of Costa Rica through sustainable, locally-owned adventures in La Fortuna & Peñas Blancas.
                </p>
                <!-- Social Links -->
                <div class="flex gap-4">
                    {[Instagram, Facebook].map((Icon) => (
                        <a href="#" class="w-12 h-12 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-[var(--color-secondary)] hover:text-slate-950 transition-all duration-500 group">
                            <Icon className="w-5 h-5 group-hover:scale-110 transition-transform" />
                        </a>
                    ))}
                </div>
            </div>

            <!-- Navigation Grid -->
            <div class="lg:col-span-4 grid grid-cols-2 gap-8">
                <div>
                    <h3 class="text-xs font-black uppercase tracking-[0.3em] text-[var(--color-secondary)] mb-8">Navigation</h3>
                    <ul class="space-y-4 text-white/60 font-medium">
                        {['Tours', 'Spa', 'Transport', 'About Us', 'Contact'].map((item) => (
                            <li>
                                <a href={`/${item.toLowerCase().replace(' ', '')}`} class="hover:text-white transition-colors flex items-center gap-2 group">
                                    <div class="w-1 h-1 bg-[var(--color-secondary)] opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                    {item}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
                <div>
                    <h3 class="text-xs font-black uppercase tracking-[0.3em] text-[var(--color-secondary)] mb-8">Quick Select</h3>
                    <ul class="space-y-4 text-white/60 font-medium">
                        {['Water', 'Hiking', 'Adrenaline', 'Wildlife'].map((cat) => (
                            <li>
                                <a href={`/tours?category=${cat}`} class="hover:text-white transition-colors flex items-center gap-2 group">
                                    <div class="w-1 h-1 bg-[var(--color-primary)] opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                    {cat} Tours
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>

            <!-- Direct Contact -->
            <div class="lg:col-span-4 p-8 rounded-[2rem] bg-white/5 border border-white/10 space-y-8">
                <h3 class="text-xs font-black uppercase tracking-[0.3em] text-white">Direct Assistance</h3>
                
                <div class="space-y-6">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/20 flex items-center justify-center text-[var(--color-primary)]">
                            <Phone className="w-5 h-5" />
                        </div>
                        <div>
                            <p class="text-[10px] uppercase font-bold text-white/40 tracking-widest">WhatsApp</p>
                            <p class="text-sm font-bold">+506 8429 1847</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/20 flex items-center justify-center text-[var(--color-primary)]">
                            <Mail className="w-5 h-5" />
                        </div>
                        <div>
                            <p class="text-[10px] uppercase font-bold text-white/40 tracking-widest">Email</p>
                            <p class="text-sm font-bold">info@chuchi-adventures.com</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/20 flex items-center justify-center text-[var(--color-primary)]">
                            <MapPin className="w-5 h-5" />
                        </div>
                        <div>
                            <p class="text-[10px] uppercase font-bold text-white/40 tracking-widest">Location</p>
                            <p class="text-sm font-bold">Peñas Blancas, Alajuela, CR</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] font-bold uppercase tracking-[0.2em] text-white/30">
            <p>&copy; {currentYear} BeyondArenal. All rights reserved.</p>
            <div class="flex gap-10">
                <a href="#" class="hover:text-white transition-colors">Privacy</a>
                <a href="#" class="hover:text-white transition-colors">Terms</a>
                <a href="#" class="flex items-center gap-2 hover:text-white transition-colors">
                    Sitemap <ExternalLink className="w-2.5 h-2.5" />
                </a>
            </div>
        </div>
    </div>
</footer>
