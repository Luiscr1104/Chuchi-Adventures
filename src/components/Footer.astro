---
import {
    Instagram,
    Facebook,
    Mail,
    Phone,
    MapPin,
    ExternalLink,
    Music2,
} from "lucide-react";
import Email from "./Email.astro";
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-950 text-white pt-24 pb-12 border-t border-white/5">
    <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-20">
            <!-- Brand & Mission -->
            <div class="lg:col-span-4 space-y-8">
                <a href="/" class="group flex items-center gap-4">
                    <img
                        src="/brand.svg"
                        alt="Beyond Arenal"
                        class="h-12 w-auto invert brightness-0"
                    />
                </a>
                <p
                    class="text-white/90 text-lg leading-relaxed font-light max-w-sm"
                >
                    Preserving the authentic spirit of Costa Rica through
                    sustainable, locally-owned adventures in La Fortuna & Peñas
                    Blancas.
                </p>
                <!-- Social Links -->
                <div class="flex gap-4">
                    <a
                        href="https://www.instagram.com/beyondarenal/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-12 h-12 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-[var(--color-secondary)] hover:text-slate-950 transition-all duration-500 group"
                        aria-label="Follow us on Instagram"
                    >
                        <Instagram
                            className="w-5 h-5 group-hover:scale-110 transition-transform"
                        />
                    </a>
                    <a
                        href="https://www.facebook.com/profile.php?id=61587983755668"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-12 h-12 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-[var(--color-secondary)] hover:text-slate-950 transition-all duration-500 group"
                        aria-label="Follow us on Facebook"
                    >
                        <Facebook
                            className="w-5 h-5 group-hover:scale-110 transition-transform"
                        />
                    </a>
                    <a
                        href="https://www.tiktok.com/@beyondarenal"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-12 h-12 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-[var(--color-secondary)] hover:text-slate-950 transition-all duration-500 group"
                        aria-label="Follow us on TikTok"
                    >
                        <Music2
                            className="w-5 h-5 group-hover:scale-110 transition-transform"
                        />
                    </a>
                </div>
            </div>

            <!-- Navigation Grid -->
            <nav
                class="lg:col-span-4 grid grid-cols-2 gap-8"
                aria-label="Footer Navigation"
            >
                <div>
                    <h2
                        class="text-xs font-black uppercase tracking-[0.3em] text-[var(--color-secondary)] mb-8"
                    >
                        Navigation
                    </h2>
                    <ul class="space-y-4 text-white/80 font-medium">
                        {
                            (
                                [
                                    "Tours",
                                    "Spa & Wellness",
                                    "Transport",
                                    "Local Eats",
                                    "About Us",
                                    "Contact",
                                ] as string[]
                            ).map((item) => (
                                <li>
                                    <a
                                        href={
                                            item === "Local Eats"
                                                ? "/restaurants"
                                                : item === "Spa & Wellness"
                                                  ? "/spa"
                                                  : `/${item.toLowerCase().replace(" ", "")}`
                                        }
                                        class="hover:text-white transition-colors flex items-center gap-2 group"
                                    >
                                        <div class="w-1 h-1 bg-[var(--color-secondary)] opacity-0 group-hover:opacity-100 transition-opacity" />
                                        {item}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div>
                    <h2
                        class="text-xs font-black uppercase tracking-[0.3em] text-[var(--color-secondary)] mb-8"
                    >
                        Quick Select
                    </h2>
                    <ul class="space-y-4 text-white/80 font-medium">
                        {
                            (
                                [
                                    "Combo",
                                    "Water",
                                    "Hiking",
                                    "Adrenaline",
                                    "Wildlife",
                                ] as string[]
                            ).map((cat) => (
                                <li>
                                    <a
                                        href={`/tours?category=${cat}`}
                                        class="hover:text-white transition-colors flex items-center gap-2 group"
                                    >
                                        <div class="w-1 h-1 bg-[var(--color-primary)] opacity-0 group-hover:opacity-100 transition-opacity" />
                                        {cat === "Combo"
                                            ? "Best Combos"
                                            : cat + " Tours"}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </nav>

            <!-- Direct Contact -->
            <div
                class="lg:col-span-4 p-8 rounded-[2rem] bg-white/5 border border-white/10 space-y-8"
            >
                <h2
                    class="text-xs font-black uppercase tracking-[0.3em] text-white"
                >
                    Direct Assistance
                </h2>

                <div class="space-y-6">
                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/20 flex items-center justify-center text-[var(--color-primary)]"
                        >
                            <Phone className="w-5 h-5" />
                        </div>
                        <div>
                            <p
                                class="text-[10px] uppercase font-bold text-white/70 tracking-widest"
                            >
                                WhatsApp
                            </p>
                            <p class="text-sm font-bold">+506 8820 1065</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/20 flex items-center justify-center text-[var(--color-primary)]"
                        >
                            <Mail className="w-5 h-5" />
                        </div>
                        <div>
                            <p
                                class="text-[10px] uppercase font-bold text-white/70 tracking-widest"
                            >
                                Email
                            </p>
                            <div class="text-sm font-bold">
                                <Email email="luiscr1104@gmail.com" />
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/20 flex items-center justify-center text-[var(--color-primary)]"
                        >
                            <MapPin className="w-5 h-5" />
                        </div>
                        <div>
                            <p
                                class="text-[10px] uppercase font-bold text-white/70 tracking-widest"
                            >
                                Location
                            </p>
                            <p class="text-sm font-bold">
                                Peñas Blancas, Alajuela, CR
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div
            class="pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] font-bold uppercase tracking-[0.2em] text-white/70"
        >
            <p>&copy; {currentYear} Beyond Arenal. All rights reserved.</p>
            <div class="flex gap-10">
                <a href="#" class="hover:text-white transition-colors"
                    >Privacy</a
                >
                <a href="#" class="hover:text-white transition-colors">Terms</a>
                <a
                    href="#"
                    class="flex items-center gap-2 hover:text-white transition-colors"
                >
                    Sitemap <ExternalLink className="w-2.5 h-2.5" />
                </a>
            </div>
        </div>
    </div>
</footer>
