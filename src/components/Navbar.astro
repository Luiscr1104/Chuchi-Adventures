---
import { tours } from "../data/tours";

// Extract unique categories for the navigation
const categories = [...new Set(tours.map((tour) => tour.category))];

// Hide category pills on /tours page (it has its own client-side filter)
const isToursPage = Astro.url.pathname.replace(/\/$/, "") === "/tours";
---

<header class="bg-white sticky top-0 z-50">
  <!-- Main Navigation -->
  <div class="border-b border-slate-100">
    <div class="container-custom">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="flex items-center gap-2">
            <img src="/brand.svg" alt="Beyond Arenal" class="h-14 w-auto" />
          </a>
        </div>

        <!-- Desktop Menu -->
        <nav class="hidden md:flex items-center gap-1">
          <a
            href="/tours"
            class="px-4 py-2 text-sm font-bold uppercase tracking-widest text-slate-700 hover:text-[var(--color-primary)] transition-colors"
            >Tours</a
          >
          <a
            href="/spa"
            class="px-4 py-2 text-sm font-bold uppercase tracking-widest text-slate-700 hover:text-[var(--color-primary)] transition-colors"
            >Spa</a
          >
          <a
            href="/transport"
            class="px-4 py-2 text-sm font-bold uppercase tracking-widest text-slate-700 hover:text-[var(--color-primary)] transition-colors"
            >Shuttle</a
          >
          <a
            href="/restaurants"
            class="px-4 py-2 text-sm font-bold uppercase tracking-widest text-slate-700 hover:text-[var(--color-primary)] transition-colors"
            >Local Eats</a
          >
          <a
            href="/about"
            class="px-4 py-2 text-sm font-bold uppercase tracking-widest text-slate-700 hover:text-[var(--color-primary)] transition-colors"
            >About</a
          >
          <a
            href="/contact"
            class="px-4 py-2 text-sm font-bold uppercase tracking-widest text-slate-700 hover:text-[var(--color-primary)] transition-colors"
            >Contact</a
          >
        </nav>

        <div class="hidden md:flex">
          <a
            href="https://wa.me/50688201065"
            target="_blank"
            class="btn-primary text-sm px-5 py-2.5 rounded-xl"
            data-track-wa
            data-wa-location="navbar_cta"
          >
            Inquire Now
          </a>
        </div>

        <!-- Mobile menu button -->
        <div class="md:hidden flex items-center">
          <button
            id="mobile-menu-btn"
            class="text-slate-700 hover:text-[var(--color-primary)] focus:outline-none p-2"
            aria-label="Toggle menu"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Category Bar (Desktop) — Hidden on /tours page -->
  {
    !isToursPage && (
      <div class="hidden md:block bg-gradient-to-r from-slate-50 via-white to-slate-50 border-b border-slate-100/80">
        <div class="container-custom">
          <div class="flex items-center justify-center gap-3 py-3 overflow-x-auto scrollbar-hide">
            {(categories as string[]).map((category, i) => (
              <>
                <a
                  href={`/tours?category=${category}`}
                  class="px-5 py-2 text-[11px] font-bold uppercase tracking-[0.15em] text-slate-600 hover:text-white bg-transparent border border-slate-300 rounded-full hover:bg-[var(--color-primary)] hover:border-[var(--color-primary)] hover:shadow-lg hover:shadow-[var(--color-primary)]/15 transition-all duration-300 whitespace-nowrap"
                >
                  {category}
                </a>
                {i < categories.length - 1 && (
                  <span class="w-1 h-1 rounded-full bg-slate-300 shrink-0" />
                )}
              </>
            ))}
            <span class="w-1 h-1 rounded-full bg-slate-300 shrink-0" />
            <a
              href="/tours"
              class="px-5 py-2 text-[11px] font-bold uppercase tracking-[0.15em] text-[var(--color-primary)] border border-[var(--color-primary)]/30 rounded-full bg-[var(--color-primary)]/5 hover:bg-[var(--color-primary)] hover:text-white hover:shadow-lg hover:shadow-[var(--color-primary)]/15 transition-all duration-300 whitespace-nowrap"
            >
              All Tours →
            </a>
          </div>
        </div>
      </div>
    )
  }

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white border-t border-slate-100"
  >
    <div class="px-4 pt-4 pb-6 space-y-1">
      <!-- Category Pills (Mobile) — Hidden on /tours page -->
      {
        !isToursPage && (
          <div class="pb-4 mb-3 border-b border-slate-100">
            <p class="text-[9px] font-black uppercase tracking-[0.3em] text-slate-400 mb-3 px-1">
              Tour Categories
            </p>
            <div class="flex flex-wrap gap-2">
              {categories.map((category) => (
                <a
                  href={`/tours?category=${category}`}
                  class="px-3 py-1.5 text-[11px] font-bold uppercase tracking-widest text-slate-600 bg-slate-50 border border-slate-200 rounded-full hover:bg-[var(--color-primary)] hover:text-white hover:border-[var(--color-primary)] transition-all"
                >
                  {category}
                </a>
              ))}
            </div>
          </div>
        )
      }

      <!-- Main Links -->
      <a
        href="/tours"
        class="block px-3 py-2.5 rounded-xl text-base font-bold text-slate-700 hover:text-[var(--color-primary)] hover:bg-slate-50 transition-colors"
        >All Tours</a
      >
      <a
        href="/spa"
        class="block px-3 py-2.5 rounded-xl text-base font-bold text-slate-700 hover:text-[var(--color-primary)] hover:bg-slate-50 transition-colors"
        >Spa</a
      >
      <a
        href="/transport"
        class="block px-3 py-2.5 rounded-xl text-base font-bold text-slate-700 hover:text-[var(--color-primary)] hover:bg-slate-50 transition-colors"
        >Private Shuttle</a
      >
      <a
        href="/restaurants"
        class="block px-3 py-2.5 rounded-xl text-base font-bold text-slate-700 hover:text-[var(--color-primary)] hover:bg-slate-50 transition-colors"
        >Local Eats</a
      >
      <a
        href="/about"
        class="block px-3 py-2.5 rounded-xl text-base font-bold text-slate-700 hover:text-[var(--color-primary)] hover:bg-slate-50 transition-colors"
        >About Us</a
      >
      <a
        href="/contact"
        class="block px-3 py-2.5 rounded-xl text-base font-bold text-slate-700 hover:text-[var(--color-primary)] hover:bg-slate-50 transition-colors"
        >Contact</a
      >

      <!-- Mobile CTA -->
      <div class="pt-4 mt-3 border-t border-slate-100">
        <a
          href="https://wa.me/50688201065"
          target="_blank"
          class="btn-primary w-full text-center py-3 rounded-xl text-sm font-bold"
          data-track-wa
          data-wa-location="navbar_mobile_cta"
        >
          Inquire on WhatsApp
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>
