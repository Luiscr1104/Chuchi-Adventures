---
import RestaurantCard from "./RestaurantCard.astro";
import { restaurants } from "../data/restaurants";
import { UtensilsCrossed } from "lucide-react";
---

<section
    id="local-eats"
    class="py-32 bg-slate-50 relative overflow-hidden scroll-reveal"
>
    <!-- Decorative background elements -->
    <div
        class="absolute top-0 left-0 w-1/3 h-full bg-slate-100 opacity-50 skew-x-12 transform -translate-x-1/2"
    >
    </div>

    <div class="container-custom relative z-10">
        <!-- Section Header -->
        <div
            class="flex flex-col md:flex-row md:items-end justify-between mb-20 gap-8 scroll-child"
        >
            <div class="max-w-2xl">
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-12 h-1 bg-[var(--color-primary)]"></div>
                    <span
                        class="text-[var(--color-primary)] font-black uppercase tracking-[0.3em] text-xs"
                        >Arenal Flavors</span
                    >
                </div>
                <h2
                    class="text-4xl sm:text-5xl md:text-7xl font-bold text-slate-900 tracking-tighter leading-none"
                >
                    BEST LOCAL <br /><span
                        class="text-slate-400 font-normal italic"
                        >EATS NEARBY.</span
                    >
                </h2>
            </div>
            <div class="max-w-sm space-y-4">
                <div class="flex items-center gap-3 text-slate-900">
                    <UtensilsCrossed class="w-5 h-5" />
                    <span class="font-black uppercase tracking-widest text-xs"
                        >Curated Selection</span
                    >
                </div>
                <p
                    class="text-slate-500 text-base md:text-lg font-medium leading-relaxed"
                >
                    Don't just tour; dine like a local. Our team's personal
                    recommendations for the most authentic flavors in Chachagua
                    and La Fortuna.
                </p>
            </div>
        </div>

        <!-- Restaurants Grid -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 scroll-child"
            style="--scroll-delay: 0.15s"
        >
            {
                restaurants.map((restaurant) => (
                    <RestaurantCard restaurant={restaurant} />
                ))
            }
        </div>

        <!-- Info Footer -->
        <div
            class="mt-20 pt-10 border-t border-slate-200 flex flex-col md:flex-row items-center justify-between gap-8 scroll-child"
            style="--scroll-delay: 0.3s"
        >
            <div class="flex items-center gap-6">
                <div class="flex flex-col">
                    <span
                        class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400"
                        >Average Price</span
                    >
                    <span class="text-lg font-bold text-slate-900"
                        >₡5,000 - ₡10,000</span
                    >
                </div>
                <div class="w-px h-8 bg-slate-200"></div>
                <div class="flex flex-col">
                    <span
                        class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400"
                        >Distance</span
                    >
                    <span class="text-lg font-bold text-slate-900"
                        >0 - 15 mins</span
                    >
                </div>
            </div>

            <div
                class="flex items-center gap-4 px-6 py-3 bg-white rounded-2xl shadow-sm border border-slate-100"
            >
                <div class="w-2 h-2 bg-green-500 rounded-full animate-bounce">
                </div>
                <span
                    class="text-[10px] font-black uppercase tracking-widest text-slate-900"
                    >All locations verified by Beyond Arenal Guides</span
                >
            </div>
        </div>
    </div>
</section>
