---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import WhatsAppBtn from "../components/WhatsAppBtn.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const {
  title,
  description = "Book top-rated tours in La Fortuna & Peñas Blancas: Safari Float, Kayak, Rafting, Canyoning. Boutique groups ✓ Local guides ✓ Instant WhatsApp booking.",
  image = "/images/og/home.webp",
  noindex = false,
} = Astro.props;

const _URL = (globalThis as any).URL;
const canonicalURL = new _URL(Astro.url.pathname, Astro.site);
const socialImageURL = new _URL(image, Astro.site);

// Global Organization schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": ["TourOperator", "TravelAgency"],
  name: "Beyond Arenal",
  alternateName: ["Beyond Arenal Tours", "Beyond Arenal La Fortuna"],
  url: "https://beyondarenal.com",
  logo: new _URL("/logoBlack.svg", Astro.site).href,
  description:
    "Direct Tour Operator and Travel Agency in La Fortuna, Costa Rica. Boutique small-group adventures and private tours since 2014.",
  telephone: "+506-8820-1065",
  email: "luiscr1104@gmail.com",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Peñas Blancas",
    addressLocality: "La Fortuna",
    addressRegion: "Alajuela",
    addressCountry: "CR",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 10.4678, // Adjusted to be closer to La Fortuna center
    longitude: -84.6427,
  },
  sameAs: [
    "https://www.facebook.com/profile.php?id=61587983755668",
    "https://www.instagram.com/beyondarenal/",
    "https://www.tiktok.com/@beyondarenal",
  ],
  priceRange: "$$",
  areaServed: {
    "@type": "Place",
    name: "La Fortuna, Arenal, Costa Rica",
  },
};
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-MT2XX3NT");
    </script>
    <!-- End Google Tag Manager -->

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logoBlack.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang="en" href={canonicalURL} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph / Kevin -->
    <meta property="og:locale" content="en_US" />
    <meta
      property="og:type"
      content={Astro.url.pathname.startsWith("/tours/") ? "article" : "website"}
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Beyond Arenal" />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />

    <!-- Organization Schema -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(organizationSchema)}
    />

    <!-- Slot for additional head elements (like Schema) -->
    <slot name="head" />
  </head>
  <body class="flex flex-col min-h-screen bg-slate-50">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-MT2XX3NT"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <WhatsAppBtn isFloating={true} trackLocation="floating_button" />
    <Footer />

    <!-- Global WhatsApp Click Tracking -->
    <script>
      document.addEventListener("click", function (e) {
        const target = e.target as HTMLElement;
        const link = target.closest(
          "[data-track-wa]",
        ) as HTMLAnchorElement | null;
        if (!link) return;

        // Use type-safe dataLayer access
        const windowWithDataLayer = window as any;
        windowWithDataLayer.dataLayer = windowWithDataLayer.dataLayer || [];
        windowWithDataLayer.dataLayer.push({
          event: "whatsapp_click",
          wa_location: link.getAttribute("data-wa-location") || "unknown",
          wa_url: link.href || "",
        });
      });
    </script>
  </body>
</html>
