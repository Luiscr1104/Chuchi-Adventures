---
import Layout from "../layouts/Layout.astro";
import { spaServices } from "../data/spa";
import {
  Sparkles,
  Waves,
  Flower2,
  Cloud,
  Clock,
  Smartphone,
  Mail,
  MapPin,
  ArrowRight,
  Star,
} from "lucide-react";

const categories = [
  { id: "Massages", name: "Specialized Massages", icon: Waves },
  { id: "Targeted", name: "Targeted Treatments", icon: Flower2 },
  { id: "Facial & Body", name: "Facial & Body Care", icon: Sparkles },
  { id: "Packages", name: "Premium Packages", icon: Star },
];
---

<Layout
  title="Wellness Spa La Fortuna — Treatments | Beyond Arenal"
  description="Artisanal spa treatments in La Fortuna: therapeutic massages, volcanic mud wraps & facial care. Daily appointments ✓ In-home service ✓"
>
  <!-- Luxury Hero -->
  <section
    class="relative h-[70vh] flex items-center justify-center overflow-hidden bg-slate-900"
  >
    <div class="absolute inset-0 z-0">
      <img
        src="https://images.unsplash.com/photo-1544161515-4ab6ce6db874?q=80&w=2621"
        alt="Spa Wellness"
        class="w-full h-full object-cover opacity-50"
      />
      <div
        class="absolute inset-0 bg-gradient-to-b from-slate-900/60 via-slate-900/20 to-slate-50"
      >
      </div>
    </div>

    <div class="relative z-10 container-custom text-center">
      <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="w-12 h-px bg-emerald-400/50"></div>
          <span
            class="text-emerald-400 font-black uppercase tracking-[0.5em] text-[10px]"
            >Elegance & Serenity</span
          >
          <div class="w-12 h-px bg-emerald-400/50"></div>
        </div>

        <h1
          class="text-5xl sm:text-6xl md:text-8xl font-serif text-white leading-none italic"
        >
          Artisanal <br /><span
            class="text-emerald-500 not-italic font-bold text-6xl sm:text-7xl md:text-9xl"
            >Wellness Spa</span
          >
        </h1>

        <p
          class="text-white/60 text-xl font-light tracking-wide max-w-2xl mx-auto italic"
        >
          A sanctuary of wellness designed to restore your harmony through
          artisanal treatments and local essences.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact & Info Floating Bar -->
  <section class="relative z-30 -mt-16 container-custom px-4">
    <div
      class="bg-white/80 backdrop-blur-2xl rounded-[2.5rem] shadow-2xl border border-white/40 p-10 md:p-16"
    >
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
        <div class="space-y-6">
          <h2 class="text-3xl font-serif text-slate-900 italic">
            Boutique Wellness
          </h2>
          <p class="text-slate-500 leading-relaxed font-medium">
            Personalized experiences focused on your unique needs. We bring the
            tranquility of the rainforest to your relaxation time.
          </p>
        </div>

        <div class="lg:col-span-2 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="flex items-start gap-4">
            <div class="p-3 bg-emerald-50 rounded-xl text-emerald-600">
              <Star className="w-5 h-5" />
            </div>
            <div>
              <p
                class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1"
              >
                Service
              </p>
              <p class="text-sm font-bold text-slate-900">Premium Treatments</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="p-3 bg-emerald-50 rounded-xl text-emerald-600">
              <Clock className="w-5 h-5" />
            </div>
            <div>
              <p
                class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1"
              >
                Availability
              </p>
              <p class="text-sm font-bold text-slate-900">Daily appointments</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="p-3 bg-emerald-50 rounded-xl text-emerald-600">
              <MapPin className="w-5 h-5" />
            </div>
            <div>
              <p
                class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1"
              >
                Local Service
              </p>
              <p class="text-sm font-bold text-slate-900">La Fortuna Area</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Catalog -->
  <section class="py-32 bg-slate-50">
    <div class="container-custom">
      {
        categories.map((cat) => (
          <div class="mb-32 last:mb-0">
            <div class="flex flex-col md:flex-row items-end justify-between gap-8 mb-16 border-b border-slate-200 pb-12">
              <div class="space-y-4">
                <div class="flex items-center gap-3 text-emerald-600">
                  <cat.icon className="w-6 h-6" />
                  <span class="text-xs font-black uppercase tracking-[0.4em]">
                    {cat.id}
                  </span>
                </div>
                <h2 class="text-5xl font-serif text-slate-900 font-light italic">
                  {cat.name}
                </h2>
              </div>
              <p class="text-slate-400 text-sm max-w-sm text-right font-medium uppercase tracking-widest leading-relaxed">
                * Dedicated to providing the highest standards of professional
                care.
              </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {spaServices
                .filter((s) => s.category === cat.id)
                .map((service) => (
                  <div
                    class={`group p-8 rounded-[2rem] bg-white border border-slate-100 transition-all duration-700 hover:shadow-2xl hover:shadow-emerald-500/5 flex flex-col justify-between ${service.isPremium ? "ring-2 ring-emerald-500/10 bg-emerald-50/5" : ""}`}
                  >
                    <div>
                      <div class="flex justify-between items-start mb-6">
                        <h3 class="text-xl font-bold text-slate-900 tracking-tight leading-tight group-hover:text-emerald-600 transition-colors uppercase">
                          {service.name}
                        </h3>
                        <div class="px-3 py-1 bg-slate-50 rounded-full border border-slate-100 text-[10px] font-black text-slate-400 group-hover:bg-emerald-100 group-hover:text-emerald-700 group-hover:border-emerald-200 transition-all whitespace-nowrap">
                          {service.duration}
                        </div>
                      </div>
                      <p class="text-slate-500 text-sm leading-relaxed font-normal italic mb-8">
                        {service.description}
                      </p>
                    </div>

                    <a
                      href={`https://wa.me/50688201065?text=Hello, I am interested in the ${service.name} treatment.`}
                      target="_blank"
                      class="inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-emerald-600 group-hover:gap-4 transition-all"
                      data-track-wa
                      data-wa-location={`spa_service_${service.name.toLowerCase().replace(/\s+/g, "_")}`}
                    >
                      Book Treatment <ArrowRight className="w-3 h-3" />
                    </a>
                  </div>
                ))}
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Final Interaction -->
  <section class="py-40 bg-emerald-950 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <img
        src="https://images.unsplash.com/photo-1515377905703-c4788e51af15?q=80&w=2621"
        class="w-full h-full object-cover"
        alt=""
      />
    </div>
    <div class="container-custom relative z-10 text-center">
      <div class="max-w-2xl mx-auto space-y-12">
        <h2
          class="text-5xl md:text-7xl font-serif text-white leading-none italic"
        >
          The Gift <br /><span class="text-emerald-400 not-italic font-bold"
            >of Wellness</span
          >
        </h2>
        <p class="text-emerald-100/60 text-xl font-light tracking-wide italic">
          Treat yourself or your loved ones to an unforgettable experience of
          relaxation and healing.
        </p>
        <div class="pt-8">
          <a
            href="https://wa.me/50688201065"
            target="_blank"
            class="inline-flex h-20 px-16 bg-white text-emerald-950 rounded-[1.5rem] font-black uppercase tracking-[0.2em] text-xs items-center hover:bg-emerald-400 transition-all duration-500 shadow-2xl shadow-emerald-500/20"
            data-track-wa
            data-wa-location="spa_bottom_cta"
          >
            Inquire with Experts
          </a>
        </div>
        <div
          class="flex items-center justify-center gap-4 text-[10px] font-black uppercase tracking-widest text-emerald-500/50"
        >
          <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"
          ></span>
          In-home service available upon request
        </div>
      </div>
    </div>
  </section>

  <style>
    .font-serif {
      font-family: "Cormorant Garamond", serif;
    }
  </style>
</Layout>
