>
  <!-- FAQPage Schema -->
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "How do I book a tour?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "The easiest way is via WhatsApp. We confirm availability instantly and send you payment details.",
          },
        },
        {
          "@type": "Question",
          name: "What is the cancellation policy?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Full refund if cancelled 24 hours before the tour.",
          },
        },
        {
          "@type": "Question",
          name: "Is transport included?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Most tours include transport from La Fortuna area. Please confirm your hotel location when booking.",
          },
        },
      ],
    })}
