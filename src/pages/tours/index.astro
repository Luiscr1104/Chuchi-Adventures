---
import Layout from '../../layouts/Layout.astro';
import TourCard from '../../components/TourCard';
import { tours } from '../../data/tours';
---

<Layout title="Our Tours" description="Explore all available tours in La Fortuna and PeÃ±as Blancas.">
  <div class="bg-[var(--color-primary)] pt-32 pb-20 text-center text-white relative overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
    <div class="relative z-10 container-custom">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">Our Tours</h1>
      <p class="text-xl text-green-100 max-w-2xl mx-auto leading-relaxed">
        From relaxing boat rides to adrenaline-filled adventures. Find your next unforgettable experience.
      </p>
    </div>
  </div>

  <section class="py-20 bg-slate-50 min-h-screen">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {tours.map((tour) => (
          <TourCard tour={tour} client:visible />
        ))}
      </div>
    </div>
  </section>
</Layout>
