---
import Layout from "../../layouts/Layout.astro";
import ToursPage from "../../components/ToursPage";
import { tours } from "../../data/tours";
---

<Layout
  title="Curated Expeditions & Adventures"
  description="Immersive local experiences designed for deep connection with nature in La Fortuna and Peñas Blancas."
>
  <!-- Hero Section (Editorial Style) -->
  <div class="relative pt-48 pb-32 overflow-hidden bg-white">
    <!-- Decorative Elements -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-slate-50 -skew-x-12 translate-x-1/2"></div>
    <div class="absolute -top-24 -left-24 w-96 h-96 bg-[var(--color-primary)]/5 rounded-full blur-3xl"></div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center space-y-8">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="w-12 h-px bg-[var(--color-primary)]"></div>
          <span class="text-[var(--color-primary)] font-black uppercase tracking-[0.4em] text-[10px]">Professional Outfitter</span>
        </div>
        
        <h1 class="text-6xl md:text-8xl font-bold text-slate-900 tracking-tighter leading-[0.9] text-wrap: balance">
          EXPLORE <br/>
          <span class="text-[var(--color-secondary)] italic font-medium">CURATED</span> <br/>
          EXPEDITIONS.
        </h1>
        
        <p class="text-lg md:text-xl text-slate-500 max-w-2xl mx-auto font-medium leading-relaxed">
          From the deep canopy to the winding rivers of Peñas Blancas, discover adventures handpicked for their authenticity and impact.
        </p>

        <div class="flex justify-center pt-8">
            <div class="flex items-center gap-1 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400">
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                Active Season 2024
            </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <section class="py-24 bg-slate-50 relative">
    <!-- Sophisticated Background Pattern -->
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-[0.03] pointer-events-none"></div>
    
    <div class="container-custom relative z-10">
      <ToursPage tours={tours} client:load />
    </div>
  </section>
</Layout>
