---
import Layout from "../../layouts/Layout.astro";
import ToursPage from "../../components/ToursPage";
import { tours } from "../../data/tours";
---

<Layout
  title="Curated Expeditions & Adventures"
  description="Immersive local experiences designed for deep connection with nature in La Fortuna and Peñas Blancas."
>
  <main class="bg-white min-h-screen">
    <!-- Streamlined Header -->
    <div class="pt-32 pb-12 bg-white border-b border-slate-100">
      <div class="container-custom">
        <div class="max-w-4xl">
          <div class="flex items-center gap-3 mb-4">
            <span class="w-8 h-px bg-[var(--color-primary)]"></span>
            <span class="text-[var(--color-primary)] font-black uppercase tracking-[0.4em] text-[10px]">Active Season 2024</span>
          </div>
          <h1 class="text-4xl md:text-6xl font-black text-slate-900 tracking-tighter mb-4">
            ALL EXPEDITIONS.
          </h1>
          <p class="text-slate-500 font-medium max-w-xl">
            Discover our curated selection of adventures in La Fortuna & Peñas Blancas.
          </p>
        </div>
      </div>
    </div>

    <!-- Tours Grid (Immediate focus) -->
    <section class="py-16 bg-slate-50/50">
      <div class="container-custom">
        <ToursPage tours={tours} client:load />
      </div>
    </section>
  </main>
</Layout>
